shell=bash
# Font

font_family FiraCode Nerd Font Mono Reg
italic_font auto
bold_italic_font auto
font_size 12
hide_window_decorations yes
# Theme
# foreground #f8f8f2
# background #000000
# url_color #d65c9d

# Cursor
# cursor #8fee96
shell_integration enabled
allow_hyperlinks yes
allow_remote_control yes
show_hyperlink_targets yes
# - Use additional nerd symbols
# See https://github.com/be5invis/Iosevka/issues/248
# See https://github.com/ryanoasis/nerd-fonts/wiki/Glyph-Sets-and-Code-Points
term xterm-256color
background_opacity 1
tab_bar_edge top
tab_bar_margin_width 1.0
tab_bar_margin_height 1.0 0.5
tab_bar_style powerline
tab_powerline_style slanted
tab_title_template "{index}"

# styling tabs
# active_tab_foreground #0da38a 
# active_tab_background #1d202f
active_tab_font_style bold-italic
# inactive_tab_foreground #ffffff
# inactive_tab_background #292945
inactive_tab_font_style normal
# color0  #000000
# color8  #44475a
# color1  #ff5555
# color9  #ff5555
# color2  #50fa7b
# color10 #50fa7b
# color3  #f1fa8c
# color11 #f1fa8c
# color4  #bd93f9
# color12 #bd93f9
# color5  #ff79c6
# color13 #ff79c6
# color6  #8be9fd
# color14 #8be9fd
# color7  #bbbbbb
# color15 #ffffff

#mapping keys for win change
map alt+i next_layout
map alt+enter new_window
map alt+l next_window
map alt+h previous_window
map alt+a previous_tab
map alt+d next_tab

map alt+t new_tab

map alt+r load_config_file

map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard

map f1 copy_to_buffer a
map f2 paste_from_buffer a

# BEGIN_KITTY_THEME
# Atom One Light
include current-theme.conf
# END_KITTY_THEME
#include oxo.conf
